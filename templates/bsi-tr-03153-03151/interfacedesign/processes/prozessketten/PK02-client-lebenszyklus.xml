<?xml version="1.0" encoding="UTF-8"?>
<processChain>
    <chainId>PK02</chainId>
    <name>
        <text xml:lang="en">Client Lifecycle</text>
        <text xml:lang="de">Client-Lebenszyklus</text>
    </name>
    <description>
        <text xml:lang="en">Complete lifecycle of a client from registration through usage to deregistration</text>
        <text xml:lang="de">Vollständiger Lebenszyklus eines Clients von der Registrierung über die Nutzung bis zur Deregistrierung</text>
    </description>
    <involvedProcesses>
        <process>
            <id>004</id>
            <name>
                <text xml:lang="en">Client Registration</text>
                <text xml:lang="de">Client-Registrierung</text>
            </name>
        </process>
        <process>
            <id>001-003</id>
            <name>
                <text xml:lang="en">Transaction Processes (multiple)</text>
                <text xml:lang="de">Transaktionsprozesse (mehrfach)</text>
            </name>
        </process>
        <process>
            <id>014</id>
            <name>
                <text xml:lang="en">Client Deregistration</text>
                <text xml:lang="de">Client-Deregistrierung</text>
            </name>
        </process>
    </involvedProcesses>
    <prerequisites>
        <prerequisite>
            <text xml:lang="en">TSE is initialized</text>
            <text xml:lang="de">TSE ist initialisiert</text>
        </prerequisite>
        <prerequisite>
            <text xml:lang="en">Admin or Logger is authenticated</text>
            <text xml:lang="de">Admin oder Logger ist authentifiziert</text>
        </prerequisite>
    </prerequisites>
    <actors>
        <actor>
            <text xml:lang="en">Admin/Logger</text>
            <text xml:lang="de">Admin/Logger</text>
        </actor>
        <actor>
            <text xml:lang="en">TSE</text>
            <text xml:lang="de">TSE</text>
        </actor>
        <actor>
            <text xml:lang="en">Security Module</text>
            <text xml:lang="de">Sicherheitsmodul</text>
        </actor>
        <actor>
            <text xml:lang="en">Storage Medium</text>
            <text xml:lang="de">Speichermedium</text>
        </actor>
        <actor>
            <text xml:lang="en">Client/POS System</text>
            <text xml:lang="de">Client/Kassensystem</text>
        </actor>
    </actors>
    <steps>
        <step>
            <stepNumber>1</stepNumber>
            <name>
                <text xml:lang="en">Registration</text>
                <text xml:lang="de">Registrierung</text>
            </name>
            <function>
                <name>registerClient</name>
                <linkedProcess>
                    <id>004</id>
                    <name>
                        <text xml:lang="en">Client Registration</text>
                        <text xml:lang="de">Client-Registrierung</text>
                    </name>
                </linkedProcess>
            </function>
            <description>
                <text xml:lang="en">Client is registered with the TSE and receives authorization for transactions</text>
                <text xml:lang="de">Client wird bei der TSE registriert und erhält Berechtigung für Transaktionen</text>
            </description>
        </step>
        <step>
            <stepNumber>2</stepNumber>
            <name>
                <text xml:lang="en">Usage</text>
                <text xml:lang="de">Nutzung</text>
            </name>
            <description>
                <text xml:lang="en">Client executes any number of transactions</text>
                <text xml:lang="de">Client führt beliebig viele Transaktionen durch</text>
            </description>
            <frequency>Multiple transactions</frequency>
        </step>
        <step>
            <stepNumber>3</stepNumber>
            <name>
                <text xml:lang="en">Deregistration</text>
                <text xml:lang="de">Deregistrierung</text>
            </name>
            <function>
                <name>deregisterClient</name>
                <linkedProcess>
                    <id>014</id>
                    <name>
                        <text xml:lang="en">Client Deregistration</text>
                        <text xml:lang="de">Client-Deregistrierung</text>
                    </name>
                </linkedProcess>
            </function>
            <description>
                <text xml:lang="en">Client is deregistered and can no longer start transactions</text>
                <text xml:lang="de">Client wird deregistriert und kann keine Transaktionen mehr starten</text>
            </description>
        </step>
    </steps>
    <logMessages>
        <logMessage>
            <text xml:lang="en">System-Log (registerClient)</text>
            <text xml:lang="de">System-Log (registerClient)</text>
        </logMessage>
        <logMessage>
            <text xml:lang="en">Transaction-Logs (start, update, finish) - multiple</text>
            <text xml:lang="de">Transaction-Logs (start, update, finish) - mehrfach</text>
        </logMessage>
        <logMessage>
            <text xml:lang="en">System-Log (deregisterClient)</text>
            <text xml:lang="de">System-Log (deregisterClient)</text>
        </logMessage>
    </logMessages>
    <usageScenario>
        <text xml:lang="en">POS system is deployed, executes business operations, is decommissioned</text>
        <text xml:lang="de">Kassensystem wird in Betrieb genommen, führt Geschäftsvorgänge durch, wird außer Betrieb genommen</text>
    </usageScenario>
    <references>
        <reference>BSI TR-03151-1 Chapter 3.7.3 and 3.7.4</reference>
    </references>
</processChain>
